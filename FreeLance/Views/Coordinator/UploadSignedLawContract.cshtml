@model FreeLance.Controllers.CoordinatorController.UploadSignedLawContractModel
@{
	ViewBag.Title = "Загрузить ГПХ";
	ViewBag.MenuPick = "Upload";
}

<h2>Загрузка заполненного ГПХ</h2>
@using (Html.BeginForm("UploadSignedLawContract", "Coordinator", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.PostModel.File, "Путь к файлу", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" accept=".doc,.docx" class="form-control" name="UploadPostModel.File"/>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PostModel.UserId, "С кем заключен", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UploadPostModel.UserId", 
                    new SelectList(Model.Freelancers, "Id", "Email"), 
                        new { @class = "form-control" } )
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PostModel.LawFaceId, "Юрлицо", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UploadPostModel.LawFaceId", 
                    new SelectList(Model.LawFaces, "Id", "Name"), 
                        new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PostModel.StartDate, "Дата заключения", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" class="form-control" name="UploadPostModel.StartDate" />
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PostModel.EndDate, "Дата истечения", new { @class = "control-label col-md-2" })
            <div class="col-md-10">                
                <input type="date" class="form-control" name="UploadPostModel.EndDate"/>
                </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Загрузить" class="btn btn-info" />                
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
