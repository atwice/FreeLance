@model IEnumerable<FreeLance.Controllers.CoordinatorController.EmployersVR>

@{
    ViewBag.Title = "EmployerApprovationList";
	ViewBag.MenuPick = "Employers";
}

<h2>EmployerApprovationList</h2>
@foreach (var employerData in Model) {
	<dd>
		@using (Html.BeginForm("ChangeEmployerApprovalStatus", "Coordinator", FormMethod.Post)) {
			@employerData.Employer.Email
			<input name="employerId" type="hidden" value="@employerData.Form.EmployerId" />
			<input name="isApproved" type="hidden" value="@employerData.Form.IsApproved" />
			<input name="redirect" type="hidden" value="@employerData.Form.Redirect" />
			<input type="submit" class="btn" value="@employerData.Form.ButtonText" />
		}
	</dd>
}
