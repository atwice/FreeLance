@model IEnumerable<FreeLance.Controllers.EmployerController.ArchivedContractViewModel>
@{
    ViewBag.Title = "Архив";
}
@helper Truncate(string input, int length)
{
if (input.Length <= length)
{
		@input
}
else
{
		@input.Substring(0, length)<text>...</text>
}
}

<div class="col-md-10">
	<h2>@ViewBag.Title</h2>
	<h3>Выполненные контракты</h3>
	<div class="list-group">
		@foreach (var contract in Model)
		{
			<a href="/Problem/Details/@contract.ContractId" class="list-group-item">
				<h4 class="list-group-item-heading">@contract.Name</h4>
				<p class="list-group-item-text" style="color:lightgray"><i>@contract.FreelancerName</i></p>
				<p class="list-group-item-text"> @Truncate(contract.Details, 200)</p>
			</a>
		}
	</div>
</div>
