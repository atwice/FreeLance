@model FreeLance.Controllers.EmployerController.DetailsForCoordinatorView
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.Name;
}

<div class="row">
    <div class="col-md-2">
        <img src="~/Files/profile_pic.jpg" class="img-thumbnail" style="margin-top: 20px;">
    </div>
    <div class="col-md-10">
        <h2><strong>@Model.Name</strong></h2>
        @if (Model.Phone != null)
        {
            <p>@Model.Phone</p>
        }
        <p>@Model.Email</p>
        <div class="col-md-3">
            <a href="#" class="btn btn-default left" style="margin-top: 5px; width: 100%">
                Закрыть доступ
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <h3><strong>Профиль:</strong></h3>
        <p>
            <i><b>Юр лицо:</b></i> <a style="padding-left:5px">ООО "Аби продакшн"</a>
            <a>(сменить)</a>
        </p>
        <a href="/Manage/ChangePassword" class="btn btn-default" style="margin-top: 5px; width: 100%">Сбросить пароль</a>
    </div>
</div>

