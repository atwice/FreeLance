<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FreeLance - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FreeLance", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
<div class="container-fluid body-content">
    <div class="row">
        <div class="col-md-2">
            <div class="container-fluid" style="margin-top:10%">
				@if (Context.User.IsInRole("Freelancer"))
				{
				<div class="span3 bs-docs-sidebar">
					<ul class="nav nav-pills nav-stacked main-menu">
						<li>@Html.ActionLink("Профиль", "Profile", "Freelancer")</li>
						<li>@Html.ActionLink("Личный кабинет", "Home", "Freelancer")</li>
						<li>@Html.ActionLink("Биржа", "OpenProblems", "Freelancer")</li>
						<li>@Html.ActionLink("Архив", "Archive", "Freelancer")</li>
					</ul>
				</div>
				}
				@if (Context.User.IsInRole("Employer"))
				{
				<div class="span3 bs-docs-sidebar">
					<ul class="nav nav-pills nav-stacked main-menu">
						<li>@Html.ActionLink("Личный кабинет", "Home", "Employer")</li>
						<li>@Html.ActionLink("Архив контрактов", "Archive", "Employer")</li>
						<li>@Html.ActionLink("Исполнители", "Freelancers", "Employer")</li>
					</ul>
					</div>
              
				}
			</div>
        </div>
        <div class="col-md-10">@RenderBody()</div>
    </div>
    
    <hr/>
    <footer>
        <p>FreeLance - Корпоративный аутсорсинг</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
