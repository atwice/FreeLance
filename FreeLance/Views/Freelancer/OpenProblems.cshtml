@model IEnumerable<FreeLance.Models.ProblemModels>
@{
    ViewBag.Title = "Open";
}

<h2>@ViewBag.Title</h2>
        <h3>Биржа. Открытые задачи.</h3>
        <table class="table">

            <tr>
                <th>@Html.DisplayNameFor(model => model.Contracts)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.ProblemId)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @foreach (var contact in item.Contracts)
                        {
                            @Html.DisplayFor(modelItem => contact.ContractId)
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.ActionLink(@item.Name, "Details", "Problem", new { id = item.ProblemId }, null)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProblemId)</td>
                    <th>@Html.DisplayFor(modelItem => item.Status)</th>
                </tr>}

        </table>
