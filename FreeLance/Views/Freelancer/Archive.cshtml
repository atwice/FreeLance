@model IEnumerable<FreeLance.Models.ContractModels>
@{
    ViewBag.Title = "Archive";
}

<h2>@ViewBag.Title</h2>
<h3>Выполненные контракты</h3>
<div class="list-group">
	@foreach (var contract in Model)
	{
		if (@contract.Status == FreeLance.Models.ContractStatus.InProgress)
		{
			<a href="/Problem/Details/@contract.ContractId" class="list-group-item">
				<h4 class="list-group-item-heading">@contract.Problem.Name</h4>
				<p class="list-group-item-text"> @contract.Details</p>
			</a>
		}
	}
</div>
